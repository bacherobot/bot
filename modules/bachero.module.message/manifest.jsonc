{
	// Nom unique, plusieurs modules ne peuvent pas avoir le même nom
	"packageName": "bachero.module.message",

	// Nom du module
	"name": "Gestion des messages",	

	// Description du module
	"shortDescription": "Ajoute plusieurs commandes en lien avec la gestion des messages",

	// Source (par exemple, lien du module sur GitHub),
	"source": "https://github.com/bacherobot/bot",

	// Liste des fichiers à charger
	"files": [
		"first.js",
		"say.js",
		"embed.js",
		"slowmode.js",
		"clear.js"
	],

	// Liste du/des auteurs du module
	"authors": [
		{
			"name": "Johan",
			"discordId": "277825082334773251",
			"link": "https://johanstick.fr"
		}
	],

	// Liste des valeurs que le module peut accéder depuis la configuration
	"config": [
		{
			"name": "sayWithoutPermissions",
			"type": "boolean",
			"default": false,
			"description": "Active la commande /SAY même sans avoir la permission de gérer les messages, peut être utilisé pour mentionner sans avoir la permission."
		},
		{
			"name": "embedWithoutPermissions",
			"type": "boolean",
			"default": false,
			"description": "Active la commande /EMBED même sans avoir la permission de gérer les messages, peut être utilisé pour mentionner sans avoir la permission."
		},
		{
			"name": "sayShowAuthor",
			"type": "boolean",
			"default": false,
			"description": "Affiche l'auteur des messages envoyés via la commande /SAY"
		},
		{
			"name": "embedShowAuthor",
			"type": "boolean",
			"default": false,
			"description": "Affiche l'auteur des messages envoyés via la commande /EMBED"
		}
	]
}